{
    "version": "1.0.0-*",

    "dependencies": {
        "NETStandard.Library": "1.6.0",
        "ServiceBridge": { "target": "project" },
        "ServiceBridge.Ninject": {"target": "project"},
        "Microsoft.AspNetCore.Http.Abstractions": "1.0.0",
        "System.Threading.Thread": "4.0.0"
    },

    "frameworks": {
        "netstandard1.3": {
            "imports": "dnxcore50",
            "buildOptions": {
                "compile": {
                    "include": [ "../../GlobalAssemblyInfo.cs", "../../src/core/ServiceBridge.AspNetCore/**/*.cs", "../../src/Ninject/ServiceBridge.Ninject.AspNet/**/*.cs" ]
                },
                "define": [ "NetCore" ],
                "keyFile": "../../ServiceBridge.snk",
                "xmlDoc": true,
                "outputName": "ServiceBridge.Ninject.AspNet"
            }
        }
    }
}
